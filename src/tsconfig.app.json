{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../out-tsc/app",
		"baseUrl": "./",
		"module": "es2015",
		"types": [],
		"paths"   : {
			"@core/*"    : [
				"./app/@core/*"
			],
			"@theme/*"   : [
				"./app/@theme/*"
			],
			"env/*"      : [
				"./environments/*"
			],
			"admin/*"   : [
				"./app/admin/*"
			]
		}
	},
	"exclude": [
		"test.ts",
		"**/*.spec.ts"
	]
}
